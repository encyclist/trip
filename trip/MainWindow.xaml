<Window x:Name="panl" 
        x:Class="trip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trip"
        mc:Ignorable="d" Height="350" Width="525" MinHeight="50" MinWidth="50"
        SizeToContent="WidthAndHeight" Visibility="Visible" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" ShowInTaskbar="False" Title="便签">
    <Grid Name="b_grid" Background="#00000000">
        <Label Margin="0,10,0,0" Width="10" HorizontalAlignment="Left" MouseUp="Labe2_MouseUp" ToolTip="点击更换文字颜色" Background="#00DDDDDD" BorderBrush="#00707070"/>
        <Label Height="10" VerticalAlignment="Top" MouseMove="Grid_MouseMove" ToolTip="按住我可以拖动窗口"/>
        <Label Margin="0,10,0,0" Width="10" MouseUp="Label_MouseUp" HorizontalAlignment="Right" Background="#00DDDDDD" BorderBrush="#00707070" ToolTip="点击换颜色"/>
        <Label Height="10" VerticalAlignment="Bottom" ToolTip="固定顶部/解除固定" MouseUp="Label_MouseUp_1"/>
        <TextBox Text="有啥事吗" TextWrapping="Wrap" AcceptsReturn="True" Name="texxt" Margin="10,10,10,10" BorderBrush="Transparent" SelectionBrush="White" Padding="0,0,0,10" FontSize="16" KeyUp="Text_KeyUp" Background="#00000000"/>
    </Grid>
</Window>
